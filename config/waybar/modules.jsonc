    }       

},
 "wlr/taskbar": {
        "format": "{icon}",
        "format-empty": " ",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
           "Alacritty"
